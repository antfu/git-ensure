{
  "name": "git-ensure",
  "version": "0.0.0",
  "description": "Ensure git status matches with conditions before continuing your workflow.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antfu/git-ensure/issues"
  },
  "homepage": "https://github.com/antfu/git-ensure#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/git-ensure.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "watch": "npm run build -- --watch",
    "dev": "DEBUG=git-ensure:* esno src/cli.ts",
    "run": "esno src/cli.ts",
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "release": "nr run -a && npx bumpp --commit --push --tag",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "git-ensure": "bin/git-ensure"
  },
  "dependencies": {
    "cac": "^6.7.1",
    "chalk": "^4.1.0",
    "debug": "^4.3.2",
    "simple-git": "^2.35.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.4.3",
    "@antfu/ni": "^0.5.3",
    "@types/debug": "^4.1.5",
    "@types/node": "^14.14.28",
    "eslint": "^7.20.0",
    "esno": "^0.4.3",
    "tsup": "^3.12.1",
    "typescript": "^4.1.5"
  }
}
